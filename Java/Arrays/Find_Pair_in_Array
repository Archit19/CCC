package Guleri;

// Find pair with the given sum in the array

public class Questions {
    // main function
    public static void main(String args[]) {
        int[] Arr = {8, 2, 7, 3, 2};
        int sum = 10;
        findPair(Arr, sum);
    }

    //method to find a pair in an array with given sum
    private static void findPair(int[] Arr, int sum) {

    //consider each element except the last element
        for (int i = 0; i < Arr.length - 1; i++) 
        {
            // start from the i'th element till last element
            for (int j = i + 1; j < Arr.length; j++) 
            {
                //if the desired sum is found, print and return
                if (Arr[i] + Arr[j] == sum) 
                {
                    System.out.println("Pair found at index " + i + " and " + j);
                    return;
                }
            }
        }
        System.out.println("Pair not found");
    }

}

